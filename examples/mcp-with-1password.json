{
  "mcp_plugins": {
    "local_servers": {
      "github": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": {
          "GITHUB_TOKEN": "op://Private/GitHub/personal_access_token"
        }
      },
      "slack": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-slack"],
        "env": {
          "SLACK_BOT_TOKEN": "op://Private/Slack/bot_token",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        }
      }
    },
    "cloud_services": {
      "anthropic": {
        "url": "https://api.anthropic.com/v1/mcp",
        "auth": {
          "type": "bearer",
          "token": "op://Private/Anthropic/api_key"
        }
      }
    }
  }
}
