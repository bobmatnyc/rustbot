{
  "hooks": {
    "user_prompt_submit": [
      {
        "handler": "kuzu_memory_enhance",
        "command": "/Users/masa/.local/pipx/venvs/kuzu-memory/bin/kuzu-memory memory enhance \"{{prompt}}\"",
        "enabled": true
      }
    ],
    "assistant_response": [
      {
        "handler": "kuzu_memory_learn",
        "command": "/Users/masa/.local/pipx/venvs/kuzu-memory/bin/kuzu-memory memory learn \"{{response}}\" --quiet",
        "enabled": true
      }
    ]
  },
  "mcpServers": {
    "kuzu-memory": {
      "command": "/Users/masa/.local/pipx/venvs/kuzu-memory/bin/kuzu-memory",
      "args": [
        "mcp"
      ],
      "env": {
        "KUZU_MEMORY_PROJECT_ROOT": "/Users/masa/Projects/rustbot",
        "KUZU_MEMORY_DB": "/Users/masa/Projects/rustbot/kuzu-memories"
      }
    }
  }
}